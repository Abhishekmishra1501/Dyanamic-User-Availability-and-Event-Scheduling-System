{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution" : "node",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "typeRoots": ["./node_modules/@types", "./types"]
    },
    "include": ["src/**/*.ts",
                "types/**/*.d.ts"],
    "exclude": ["node_modules"]
  }
  